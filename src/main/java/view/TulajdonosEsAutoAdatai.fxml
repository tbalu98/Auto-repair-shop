<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TulajdonosEsAutoAdataiController">
   <children>
      <VBox layoutX="100.0" layoutY="138.0" prefHeight="400.0" prefWidth="600.0" spacing="5.0">
         <children>
            <Label text="Új szerelés">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <HBox alignment="TOP_CENTER" prefHeight="40.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <TextField fx:id="Nev" prefWidth="200.0" promptText="Név" />
                  <TextField fx:id="Lakcim" prefWidth="200.0" promptText="Lakcím" />
                  <TextField fx:id="Jogositvanyszam" prefWidth="200.0" promptText="Jogosítványszám" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="Automarka" minWidth="0.0" prefWidth="200.0" promptText="Autómárka" />
                  <TextField fx:id="Rendszam" prefWidth="200.0" promptText="Rendszám" />
               </children>
            </HBox>
            <TextArea fx:id="Problema" prefHeight="200.0" prefWidth="200.0" promptText="Probléma" />
            <Button mnemonicParsing="false" onAction="#szerelesFelvetelePushed" text="Szerelés felvétele" />
            <Button mnemonicParsing="false" onAction="#folyamatbanLevoSzerelesekPushed" text="Folyamatban lévő szerelések" />
            <Button fx:id="Statisztika" mnemonicParsing="false" onAction="#statisztikaPushed" text="Statisztika" />
         </children>
      </VBox>
   </children>
</AnchorPane>
